---
import BaseHead from '@/components/BaseHead'
import Header from '@/components/Header'
import Footer from '@/components/Footer'
import ProviderTheme from '@/components/ProviderTheme'
import ProviderAnimations from '@/components/ProviderAnimations'
import TwSizeIndicator from '@/components/TwSizeIndicator'
import EditBlog from '@/components/editBlog'
import { cn } from '@/utils'
const { title, description, image, articleDate, classes } = Astro.props
---

<html lang='en' class='scroll-smooth'>
	<head>
		<BaseHead title={title} description={description} ogImage={image} articleDate={articleDate} />
		<ProviderTheme />
		<ProviderAnimations />
	</head>

	<!-- INFO: switching to brand specified background and textcolor -->
	 <!-- INFO: dark mode variants not specified to be removed -->
	<body class='bg-white text-black'>
		<Header />
		<!-- class='px-5 sm:mx-auto sm:max-w-2xl sm:px-8 lg:px-0 antialiased md:max-w-screen-2xl grid gap-12 mt-4 overflow-hidden md:overflow-visible' -->
		<main
			class={cn(
				'font-primary px-0 sm:mx-auto sm:px-8 lg:px-0 antialiased grid gap-12 overflow-hidden md:overflow-visible',
				classes
			)}
		>
			<slot />
		</main>
		<Footer />
		<TwSizeIndicator />
		<EditBlog />
		<style>
			body {
				margin-left: calc(100vw - 100%); /* prevent layout shift */
			}
		</style>
	</body>
</html>
